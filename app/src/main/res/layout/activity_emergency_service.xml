<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32834E"
    tools:context=".EmergencyService">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fireTv"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/num1Tv"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:autoLink="phone"
                ></TextView>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ambuTv"
            android:textColor="#000"
            android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
            android:layout_gravity="center"
                android:layout_marginTop="30dp"
            ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/num2Tv"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:autoLink="phone"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/num3Tv"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:autoLink="phone"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/num4Tv"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:autoLink="phone"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/policeTv"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/num5Tv"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                ></TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>